\end_inset

 
\begin_inset FormulaMacro
\newcommand{\DD}{\mathscr{D}}
\end_inset


\end_layout

\begin_layout Standard
\begin_inset FormulaMacro
\newcommand{\dfx}{\frac{\partial f}{\partial x}}
\end_inset

 
